{% extends 'baseLoggedIn.html.twig' %}

{% block content %}
    {% if activeUser == exam.owner %}
    <div class="caption">
        Edit Exam Content
    </div>

    <div class="actionFieldTopText">
        Please, edit the exam below.
    </div>

    <div class="editContentFrame">
        {{ form_start(form) }}
        {{ form_row(form._token) }}
        {{ form_row(form.name) }}
        {{ form_row(form.category) }}

        {% if not exam.isRandomExam %}
            <div class="name">
                {{ form_row(form.questions) }}
            </div>
        {% endif %}

        {{ form_row(form.save) }}

        {{ form_end(form, {'render_rest': false}) }}
    </div>

    {% else %}
        <div class="caption">
            You do not have access rights to this exam.
        </div>
    {% endif %}

{% endblock %}