{% extends 'baseLoggedIn.html.twig' %}

{% block content %}
    <div class="caption">
        Your questions
    </div>

    <div class="actionFieldTop">
        <input type="button" class="orangeButton" onclick="location.href='{{ path('createQuestion') }}';" value="Add new Question" />
    </div>

    <div class="questionList">
        {% for c in categories %}
    <details>
        <summary>{{ c.name }}</summary>

            <table class="questionListTable">
                <thead>
                <tr>
                    <th style="width: 70%">Question</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for q in questions %}
                        {% if c.id == q.category.id %}
                        <tr>
                            <td>{{ q.questionText }}</td>
                            <td>
                                <button class="smallOrangeButton" data-id="{{ q.id }}" class="editButton">Edit</button>
                                <button class="smallOrangeButton" data-id="{{ q.id }}" class="deleteButton">Delete</button>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
    </details>
        {% endfor %}
    </div>



{% endblock %}