{% extends 'baseLoggedIn.html.twig' %}

{% block content %}
{% if activeUser == question.owner  %}
<div class="caption">
    Question Editor
</div>

<div class="actionFieldTopText">
    Please, edit the question below.
</div>

<div class="editContentFrame">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_row(form.category) }}
    {{ form_row(form.questionText) }}

    Answers:
    <ul class="answers" data-prototype="{{ form_widget(form.answers.vars.prototype)|e('html_attr') }}">

        {% for answer in form.answers %}
            {{ form_row(answer) }}
            <hr style="width: 90%; margin-left: 0">
        {% endfor %}
    </ul>

    {{ form_end(form) }}

</div>

{% else %}
    <div class="caption">
        You do not have access rights to this question.
    </div>
    {% endif %}

{% endblock %}