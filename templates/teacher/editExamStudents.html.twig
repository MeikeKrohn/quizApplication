{% extends 'baseLoggedIn.html.twig' %}

{% block content %}

    <div class="caption">
        {{ exam.name }}
    </div>

    <div class="actionFieldTop">
        Please, choose the students to take the exam.
    </div>

    <div class="editQuestionForm">
        <table class="listStudentsTable" id='exam' data-id="{{ exam.id }}">
            <tbody>
            {% for s in allStudents %}
                <tr>
                    <td style="width: 50px"><input type="checkbox" data-id="{{ s.id }}" class="selectStudentCheckBox" {% if s in assignedStudents %}checked="checked"{% endif %}/>
                    </td>
                    <td>{{ s.firstname }} {{ s.lastname }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <button class="addStudentsToExamButton" name="edit">Submit</button>
    </div>

{% endblock %}