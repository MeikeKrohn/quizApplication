{% extends 'baseLoggedIn.html.twig' %}

{% block content %}

    {% if activeUser == exam.owner %}

        <div class="caption">
            Choose the students to take your exam.
        </div>

        <div class="actionFieldTopText">
            Check or uncheck the boxes next to the students' names.
        </div>

        <div class="editContentFrame">
            <table class="listStudentsTable" id='exam' data-id="{{ exam.id }}">
                <tbody>
                {% for s in students %}
                    <tr>
                        <td style="width: 50px">
                            <input type="checkbox" data-id="{{ s.id }}" class="selectStudentCheckBox"/></td>
                        <td>{{ s.firstname }} {{ s.lastname }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <button class="addStudentsToExamButton" name="create">Submit</button>
        </div>

    {% else %}
        <div class="caption">
            You do not have access rights to this exam.
        </div>
    {% endif %}
{% endblock %}